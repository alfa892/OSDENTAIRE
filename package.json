{
  "name": "osdentaire",
  "version": "0.1.0",
  "description": "Monorepo minimal pour le cabinet dentaire (frontend + backend).",
  "private": true,
  "scripts": {
    "dev:web": "npm --workspace apps/web run dev",
    "dev:api": "npm --workspace apps/api run dev",
    "build:web": "npm --workspace apps/web run build",
    "build:api": "npm --workspace apps/api run build",
    "db:migrate": "npm --workspace apps/api run db:migrate",
    "patients:seed": "npm --workspace apps/api run patients:seed",
    "patients:anonymize": "npm --workspace apps/api run patients:anonymize",
    "appointments:seed": "npm --workspace apps/api run appointments:seed",
    "agenda:refresh": "npm --workspace apps/api run agenda:refresh",
    "invoices:seed": "npm --workspace apps/api run invoices:seed",
    "invoices:remind": "npm --workspace apps/api run invoices:remind",
    "invoices:healthcheck": "npm --workspace apps/api run invoices:healthcheck"
  },
  "workspaces": [
    "apps/web",
    "apps/api"
  ]
}
